<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorControlNormal">@color/blue</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.Editor" parent="AppTheme.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/translunt_gray_44</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustNothing|stateHidden</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorForeground">@color/gray_9a</item>
        <item name="android:colorPrimaryDark">@color/gray_9a</item>
        <item name="android:colorControlNormal">@color/gray_9a</item>
        <item name="colorPrimaryDark">@color/gray_9a</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:textColorHint">@color/translunt_gray_44</item>
    </style>

    <style name="AppTheme.Light.NoAnimation">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Light.FullScreen">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Light.TransparentStatus">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowSoftInputMode">adjustNothing|stateHidden</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorForeground">@color/gray_9a</item>
        <item name="android:colorPrimaryDark">@color/gray_9a</item>
        <item name="android:colorControlNormal">@color/gray_9a</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:textColorHint">@color/translunt_gray_44</item>
    </style>

    <style name="AppTheme.Light.SlideUp">
        <item name="android:windowAnimationStyle">@style/activityAnimationSlideUp</item>
    </style>
</resources>