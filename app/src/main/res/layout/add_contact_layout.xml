<merge xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto" >

    <x.RelativeLayout
        a:layout_width="680px"
        a:layout_height="900px"
        a:layout_centerInParent="true"
        x:bg="@drawable/bg_dialog" >

        <x.TextView
            a:id="@+id/add_contact_txt_title"
            style="@style/TextView"
            a:paddingBottom="60px"
            a:paddingLeft="90px"
            a:paddingTop="60px"
            a:text="@string/chat_add_contact_title"
            a:textColor="#FF242424"
            a:textSize="54px"
            a:textStyle="bold" />

        <x.TextView
            a:id="@+id/add_contact_btn_cancel"
            style="@style/TextView.Center"
            a:layout_width="240px"
            a:layout_height="120px"
            a:layout_alignParentBottom="true"
            a:layout_marginBottom="40px"
            a:layout_marginLeft="60px"
            a:background="@drawable/material_button"
            a:text="@string/cancel"
            a:textColor="#FF888888"
            a:textSize="54px" />

        <x.TextView
            a:id="@+id/add_contact_btn_confirm"
            style="@style/TextView.Center"
            a:layout_width="240px"
            a:layout_height="120px"
            a:layout_alignParentBottom="true"
            a:layout_alignParentRight="true"
            a:layout_marginBottom="40px"
            a:layout_marginRight="60px"
            a:background="@drawable/material_button"
            a:text="@string/confirm"
            a:textColor="@color/blue"
            a:textSize="54px" />

        <x.LinearLayout
            a:id="@+id/add_contact_layout_content"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_above="@id/add_contact_btn_confirm"
            a:layout_below="@id/add_contact_txt_title"
            a:orientation="vertical" />
    </x.RelativeLayout>

</merge>