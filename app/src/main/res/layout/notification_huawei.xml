<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent">

    <RelativeLayout
        a:layout_width="match_parent"
        a:layout_height="match_parent" >

        <ImageView
            a:id="@+id/notification_img_icon"
            style="@style/ImageView"
            a:layout_width="@dimen/notification_icon_width"
            a:layout_height="match_parent"
            a:layout_alignParentLeft="true"
            a:layout_centerVertical="true"
            a:layout_marginTop="1dp"
            a:tint="@color/blue"
            a:background="#08FFFFFF"
            a:scaleType="centerInside"
            a:src="@drawable/icon_notification" />

        <TextView
            a:id="@+id/mTxtTitle"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_marginLeft="10dp"
            a:layout_marginTop="8dp"
            a:layout_toRightOf="@id/notification_img_icon"
            a:textColor="@color/blue"
            a:textSize="18dp" />

        <TextView
            a:id="@+id/notification_txt_content"
            a:layout_width="280dp"
            a:layout_height="wrap_content"
            a:layout_alignLeft="@id/mTxtTitle"
            a:layout_below="@id/mTxtTitle"
            a:layout_marginTop="5dp"
            a:textColor="#991B9CF2"
            a:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>