<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:orientation="vertical" >
    
    <RelativeLayout
        a:id="@+id/training_course_system_add"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_centerHorizontal="true"
        a:layout_marginBottom="16px"
        a:layout_marginTop="20px" >

        <ImageView
            a:id="@+id/training_course_system_img_add"
            a:layout_width="127px"
            a:layout_height="98px"
            a:src="@drawable/training_course_system_add" />

        <TextView
            a:id="@+id/training_course_system_txt_add"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_marginTop="10px"
            a:layout_toRightOf="@id/training_course_system_img_add"
            a:text="@string/training_course_system_add"
            a:textColor="#4866ca"
            a:textSize="48px" />
    </RelativeLayout>
    
    <im.clazz.ui.component.MainRecyclerView
	    a:id="@+id/training_course_system_recycler_view"
	    a:layout_width="match_parent"
	    a:layout_height="match_parent"
	    a:layout_below="@id/training_course_system_add"
	    />
</RelativeLayout>
