<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="match_parent" >

    <x.RelativeLayout
        a:id="@+id/tutor_profile_rating_list_item_layout_avatar_border"
        a:layout_width="120px"
        a:layout_height="120px"
        a:layout_marginLeft="38px"
        a:layout_marginTop="24px"
        a:background="@drawable/tutor_profile_rating_avatar_bg" >

        <com.makeramen.RoundedImageView
            a:id="@+id/tutor_profile_rating_list_item_img_avatar"
            a:layout_width="114px"
            a:layout_height="114px"
            a:layout_centerInParent="true"
            x:corner_radius="57px"
            x:mutate_background="true"
            x:oval="true" />
    </x.RelativeLayout>

    <x.TextView
        a:id="@+id/tutor_profile_rating_list_item_txt_name"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_marginLeft="42px"
        a:layout_marginTop="30px"
        a:layout_toRightOf="@id/tutor_profile_rating_list_item_layout_avatar_border"
        a:textColor="#57534a"
        a:textSize="38px" />

    <x.TextView
        a:id="@+id/tutor_profile_rating_list_item_txt_comment_time"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_alignLeft="@id/tutor_profile_rating_list_item_txt_name"
        a:layout_below="@id/tutor_profile_rating_list_item_txt_name"
        a:layout_marginTop="26px"
        a:textColor="#595b5d"
        a:textSize="28px" />

    <x.TextView
        a:id="@+id/tutor_profile_rating_list_item_txt_comment"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_alignLeft="@id/tutor_profile_rating_list_item_txt_name"
        a:layout_below="@id/tutor_profile_rating_list_item_txt_comment_time"
        a:layout_marginTop="26px"
        a:lineSpacingExtra="8px"
        a:singleLine="false"
        a:textColor="#847147"
        a:textSize="34px" />

    <x.ImageView
        a:id="@+id/tutor_profile_rating_list_item_img_like"
        a:layout_width="44px"
        a:layout_height="42px"
        a:layout_alignParentRight="true"
        a:layout_marginRight="67px"
        a:layout_marginTop="44px"
        a:src="@drawable/ic_like" />

    <View
        a:id="@+id/tutor_profile_rating_list_item_bottom_line"
        a:layout_width="match_parent"
        a:layout_height="2px"
        a:layout_below="@id/tutor_profile_rating_list_item_txt_comment"
        a:layout_marginLeft="16px"
        a:layout_marginTop="40px"
        a:background="#eaeaea" />

</RelativeLayout>