<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="match_parent">

    <RelativeLayout
        a:id="@+id/training_course_results_item_layout_title"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_marginLeft="185px"
        a:visibility="gone">

        <x.TextView
            a:id="@+id/training_course_results_title_txt_location"
            a:layout_width="210px"
            a:layout_height="wrap_content"
            a:layout_marginLeft="210px"
            a:layout_marginTop="26px"
            a:gravity="center"
            a:text="(就业城市)"
            a:textColor="#68b4ee"
            a:textSize="40px" />

        <x.TextView
            a:id="@+id/training_course_results_title_txt_salary"
            a:layout_width="150px"
            a:layout_height="wrap_content"
            a:layout_marginLeft="10px"
            a:layout_marginTop="26px"
            a:layout_toRightOf="@id/training_course_results_title_txt_location"
            a:gravity="center"
            a:text="(薪水)"
            a:textColor="#68b4ee"
            a:textSize="40px" />

        <x.TextView
            a:id="@+id/training_course_results_title_txt_welfare"
            a:layout_width="325px"
            a:layout_height="wrap_content"
            a:layout_marginTop="26px"
            a:layout_toRightOf="@id/training_course_results_title_txt_salary"
            a:gravity="center"
            a:text="(福利待遇)"
            a:textColor="#68b4ee"
            a:textSize="40px" />

        <View
            a:id="@+id/training_course_results_title_line"
            a:layout_width="match_parent"
            a:layout_height="2px"
            a:layout_below="@id/training_course_results_title_txt_welfare"
            a:layout_marginTop="18px"
            a:background="#e6e6e6" />
    </RelativeLayout>

    <RelativeLayout
        a:id="@+id/training_course_results_item_layout_content"
        a:layout_width="match_parent"
        a:layout_height="match_parent">

        <com.makeramen.RoundedImageView
            a:id="@+id/training_course_results_item_img_avatar"
            a:layout_width="110px"
            a:layout_height="110px"
            a:layout_marginLeft="40px"
            a:layout_marginTop="40px"
            x:corner_radius="50px"
            x:mutate_background="true" />

        <RelativeLayout
            a:id="@+id/training_course_results_item_layout_name"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_marginLeft="35px"
            a:layout_marginTop="38px"
            a:layout_toRightOf="@id/training_course_results_item_img_avatar">

            <x.TextView
                a:id="@+id/training_course_results_item_txt_name"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_centerHorizontal="true"
                a:textColor="#757575"
                a:textSize="40px" />

            <x.TextView
                a:id="@+id/training_course_results_item_txt_profile"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_below="@id/training_course_results_item_txt_name"
                a:layout_centerHorizontal="true"
                a:layout_marginTop="10px"
                a:textColor="#acacac"
                a:textSize="37px" />
        </RelativeLayout>

        <x.TextView
            a:id="@+id/training_course_results_item_txt_location"
            a:layout_width="180px"
            a:layout_height="wrap_content"
            a:layout_centerVertical="true"
            a:layout_marginLeft="30px"
            a:layout_toRightOf="@id/training_course_results_item_layout_name"
            a:gravity="center"
            a:textColor="#757575"
            a:textSize="40px" />

        <x.TextView
            a:id="@+id/training_course_results_item_txt_salary"
            a:layout_width="170px"
            a:layout_height="wrap_content"
            a:layout_centerVertical="true"
            a:layout_marginLeft="10px"
            a:layout_toRightOf="@id/training_course_results_item_txt_location"
            a:gravity="center"
            a:textColor="#757575"
            a:textSize="40px" />

        <x.TextView
            a:id="@+id/training_course_results_item_txt_welfare"
            a:layout_width="325px"
            a:layout_height="wrap_content"
            a:layout_centerVertical="true"
            a:layout_toRightOf="@id/training_course_results_item_txt_salary"
            a:gravity="center"
            a:textColor="#757575"
            a:textSize="40px" />

        <View
            a:id="@+id/training_course_results_item_line"
            a:layout_width="match_parent"
            a:layout_height="2px"
            a:layout_alignLeft="@id/training_course_results_item_layout_name"
            a:layout_below="@id/training_course_results_item_layout_name"
            a:layout_marginTop="28px"
            a:background="#e6e6e6" />
    </RelativeLayout>

</RelativeLayout>