<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content">

    <x.RelativeLayout
        a:id="@+id/lesson_comment_fragment_layout"
        a:layout_width="1020px"
        a:layout_height="1328px"
        a:background="@drawable/material_card_bottom" >


        <com.materialedittext.MaterialEditText
            a:id="@+id/lesson_comment_edttxt_content"
            a:layout_width="769px"
            a:layout_height="wrap_content"
            a:layout_alignParentBottom="true"
            a:layout_alignParentLeft="true"
            a:layout_marginBottom="62px"
            a:layout_marginLeft="83px"
            a:focusableInTouchMode="true"
            a:hint="@string/lesson_input_comment"
            a:maxHeight="200px"
            a:textColorHint="@color/gray_cc"
            a:textCursorDrawable="@drawable/material_input_cursor_color"
            a:textSize="42px"
            x:met_floatingLabelTextColor="@color/blue"
            x:met_hideUnderline="true"
            x:met_primaryColor="@color/blue"
            x:met_textColor="@color/black"
            x:met_underlineColorFocused="@color/blue" />

        <x.ImageView
            a:id="@+id/lesson_comment_img_send"
            a:layout_width="64px"
            a:layout_height="64px"
            a:layout_alignParentBottom="true"
            a:layout_marginBottom="62px"
            a:layout_marginLeft="28px"
            a:layout_toRightOf="@id/lesson_comment_edttxt_content"
            a:src="@drawable/lesson_ic_send" />

        <x.TextView
            a:id="@+id/lesson_comment_txt_no_comment"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_centerInParent="true"
            a:text="@string/no_comment"
            a:textColor="#8d8d8d"
            a:textSize="45px"
            a:visibility="gone" />

        <ListView
            a:id="@+id/lesson_comment_list_view"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_above="@id/lesson_comment_edttxt_content"
            a:background="@null"
            a:divider="@null"
            a:fillViewport="true"
            a:scrollbars="none" />
    </x.RelativeLayout>

</RelativeLayout>