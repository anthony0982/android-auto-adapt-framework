<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 弹出的动画 -->
    <scale
		android:interpolator="@android:anim/accelerate_decelerate_interpolator"
		android:fromXScale="0.1"
		android:toXScale="1.1"
		android:fromYScale="0.1"
		android:toYScale="1.1"
		android:pivotX="50%"
		android:pivotY="100%"
		android:fillAfter="true"
		android:startOffset="@integer/anim_right_slide_in_duration"
		android:duration="@integer/anim_bubble_pop_duration" />
    
    <!-- 恢复的动画 -->
    <scale
		android:interpolator="@android:anim/accelerate_decelerate_interpolator"
		android:fromXScale="1.1"
		android:toXScale="1.0"
		android:fromYScale="1.1"
		android:toYScale="1.0"
		android:pivotX="50%"
		android:pivotY="100%"
		android:fillAfter="true"
		android:duration="@integer/anim_bubble_restore_duration"
		android:startOffset="@integer/anim_bubble_restore_delay" />
</set>