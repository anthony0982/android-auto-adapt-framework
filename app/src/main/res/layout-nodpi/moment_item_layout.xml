<?xml version="1.0" encoding="utf-8"?>
<x.RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content">


    <x.RelativeLayout
        a:id="@+id/mLayoutContent"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:background="@drawable/list_item_color_selector"
        a:paddingLeft="50px">

        <x.TextView
            a:id="@+id/mTxtTitle"
            style="@style/Topic.Item.Title"
            a:layout_width="640px"
            a:paddingBottom="20px"
            a:paddingTop="20px"
            a:textColor="@color/gray_3b"
            a:textSize="@dimen/font_size_40"
            a:textStyle="normal" />

        <x.TextView
            a:id="@+id/mTxtTime"
            style="@style/Topic.Item.Title"
            a:layout_width="wrap_content"
            a:layout_alignParentRight="true"
            a:layout_marginRight="50px"
            a:maxWidth="140px"
            a:paddingBottom="20px"
            a:paddingTop="20px"
            a:textColor="@color/gray_b2"
            a:textSize="@dimen/font_size_32"
            a:textStyle="normal" />
    </x.RelativeLayout>
</x.RelativeLayout>