<?xml version="1.0" encoding="utf-8"?>
<x.LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:background="@color/white"
    a:orientation="vertical">

    <x.RelativeLayout
        a:id="@+id/mLayoutContent"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:background="@drawable/list_item_color_selector"
        a:padding="50px">

        <x.TextView
            a:id="@+id/mTxtCourseName"
            style="@style/TextView.MultiLine"
            a:maxWidth="800px"
            a:textColor="@color/gray_88"
            a:textSize="@dimen/font_size_42" />

        <x.TextView
            a:id="@+id/mTxtGrade"
            style="@style/TextView"
            a:layout_alignParentRight="true"
            a:paddingRight="50px"
            a:textColor="@color/light_blue"
            a:textSize="@dimen/font_size_42" />
    </x.RelativeLayout>

    <View
        a:id="@+id/mBottomLine"
        a:layout_width="match_parent"
        a:layout_height="1px"
        a:background="@color/gray_f0" />

</x.LinearLayout>