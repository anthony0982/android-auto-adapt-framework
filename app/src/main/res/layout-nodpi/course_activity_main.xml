<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content"
    a:background="@android:color/white"
    a:clipToPadding="true"
    a:fitsSystemWindows="true"
    a:orientation="vertical">

    <RelativeLayout
        a:id="@+id/course_activity_layout_title_bar"
        style="@style/TitleBar.Main">

        <x.ImageView
            a:id="@+id/course_activity_img_back"
            style="@style/Icon"
            a:layout_width="120px"
            a:layout_height="120px"
            a:layout_alignParentLeft="true"
            a:layout_centerVertical="true"
            a:layout_marginLeft="10px"
            x:src="@drawable/ic_back_120" />


        <x.TextView
            a:id="@+id/course_activity_txt_title"
            style="@style/TitleBar.Text"
            a:layout_width="match_parent"
            a:layout_height="160px"
            a:text="量子力学"
            a:textSize="56px" />
    </RelativeLayout>

    <ListView
        a:id="@+id/course_list_view"
        a:layout_width="fill_parent"
        a:layout_height="fill_parent"
        a:divider="@null" />

</LinearLayout>