<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:background="@color/white"
    a:focusable="true"
    a:focusableInTouchMode="true">

    <x.TextView
        a:id="@+id/profile_edit_txt_title"
        style="@style/TextView.Center"
        a:layout_width="wrap_content"
        a:layout_centerHorizontal="true"
        a:layout_marginTop="48px"
        a:text="@string/profile_edit_create_school_title"
        a:textColor="#FF000000"
        a:textSize="56px" />

    <x.ImageView
        a:id="@+id/profile_edit_school_create_img_close"
        style="@style/ImageView"
        a:layout_width="66px"
        a:layout_height="66px"
        a:layout_alignParentRight="true"
        a:layout_marginRight="58px"
        a:layout_marginTop="43px"
        x:src="@drawable/common_icon_close_normal" />

    <View
        a:id="@+id/profile_edit_title_line"
        a:layout_width="match_parent"
        a:layout_height="2px"
        a:layout_marginTop="152px"
        a:background="#FFd7d7d7" />

    <x.TextView
        a:id="@+id/intro_profile_edit_create_school_btn_finish"
        style="@style/TextView.White.Center"
        a:layout_width="880px"
        a:layout_height="130px"
        a:layout_centerHorizontal="true"
        a:layout_marginTop="664px"
        a:background="@drawable/bg_blue_round_corner_rectangle_selector"
        a:text="@string/profile_edit_create_school_btn_finish"
        a:textSize="60px" />

    <x.combo.ComboTextView
        a:id="@+id/profile_edit_one_create_combo_txt_institute"
        style="@style/TextView.Center"
        a:layout_width="match_parent"
        a:layout_height="124px"
        a:layout_marginLeft="66px"
        a:layout_marginRight="66px"
        a:layout_marginTop="192px" />

    <x.combo.ComboEditText
        a:id="@+id/profile_edit_one_create_combo_txt_shool"
        style="@style/TextView.Center"
        a:layout_width="match_parent"
        a:layout_height="124px"
        a:layout_marginLeft="66px"
        a:layout_marginRight="66px"
        a:layout_marginTop="316px" />

    <x.combo.ComboEditText
        a:id="@+id/profile_edit_create_school_address"
        style="@style/TextView.Center"
        a:layout_width="match_parent"
        a:layout_height="124px"
        a:layout_marginLeft="66px"
        a:layout_marginRight="66px"
        a:layout_marginTop="440px" />

    <com.example.picker.SingleWheelPicker
        a:id="@+id/profile_edit_one_create_institute_picker"
        style="@style/Picker" />

    <RelativeLayout
        a:id="@+id/profile_edit_one_create_layout_search_school"
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:background="@color/white"
        a:focusable="true"
        a:focusableInTouchMode="true"
        a:visibility="gone">

        <x.ImageView
            a:id="@+id/profile_edit_one_create_img_back"
            style="@style/ImageView"
            a:layout_width="150px"
            a:layout_height="150px"
            a:layout_marginTop="36px"
            x:src="@drawable/common_icon_back" />

        <x.combo.ComboEditText
            a:id="@+id/profile_edit_one_create_combo_edit_school"
            style="@style/TextView.Center"
            a:layout_width="match_parent"
            a:layout_height="124px"
            a:layout_marginLeft="150px"
            a:layout_marginRight="66px"
            a:layout_marginTop="50px" />

        <x.TextView
            a:id="@+id/profile_edit_create_school_txt_confirm"
            style="@style/TextView.Center"
            a:layout_width="170px"
            a:layout_height="120px"
            a:layout_alignRight="@id/profile_edit_one_create_combo_edit_school"
            a:layout_alignTop="@id/profile_edit_one_create_combo_edit_school"
            a:text="@string/confirm"
            a:textColor="@color/picker_btn_color_selector"
            a:textSize="46px"
            a:visibility="gone" />
    </RelativeLayout>

</merge>