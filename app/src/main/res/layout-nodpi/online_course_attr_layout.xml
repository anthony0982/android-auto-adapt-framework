<?xml version="1.0" encoding="utf-8"?>
<x.RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:paddingBottom="20px"
    a:paddingTop="20px">

    <x.ImageView
        a:id="@+id/mImgCheck"
        style="@style/ImageView"
        a:layout_width="46px"
        a:layout_height="46px"
        a:layout_marginTop="6px"
        a:src="@drawable/ic_course_check" />

    <x.TextView
        a:id="@+id/mTxtTitle"
        style="@style/TextView.MultiLine"
        a:layout_toRightOf="@id/mImgCheck"
        a:lineSpacingMultiplier="1.3"
        a:paddingLeft="32px"
        a:textColor="@color/black"
        a:textSize="44px" />

</x.RelativeLayout>