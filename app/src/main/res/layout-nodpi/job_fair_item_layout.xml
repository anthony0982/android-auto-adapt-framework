<?xml version="1.0" encoding="utf-8"?>
<x.RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:background="@drawable/list_item_color_selector">

    <x.RelativeLayout
        a:id="@+id/mLayoutHeader"
        a:layout_width="match_parent"
        a:layout_height="wrap_content">

        <x.TextView
            a:id="@+id/mTxtSalary"
            style="@style/TextView"
            a:layout_alignParentRight="true"
            a:layout_marginRight="50px"
            a:layout_marginTop="60px"
            a:textColor="#fe6c6c"
            a:textSize="@dimen/font_size_42" />

        <x.TextView
            a:id="@+id/mTxtTitle"
            style="@style/TextView.MultiLine"
            a:layout_width="match_parent"
            a:layout_marginLeft="50px"
            a:layout_marginRight="30px"
            a:layout_marginTop="50px"
            a:layout_toLeftOf="@id/mTxtSalary"
            a:lineSpacingMultiplier="1.3"
            a:singleLine="false"
            a:textColor="@color/black"
            a:textSize="@dimen/font_size_52" />

        <x.TextView
            a:id="@+id/mTxtPostTime"
            style="@style/TextView"
            a:layout_alignParentRight="true"
            a:layout_below="@id/mTxtSalary"
            a:layout_marginRight="50px"
            a:layout_marginTop="20px"
            a:textColor="#cbcbcb"
            a:textSize="@dimen/font_size_36" />

        <x.TextView
            a:id="@+id/mTxtTime"
            style="@style/TextView"
            a:layout_alignParentRight="true"
            a:layout_below="@id/mTxtPostTime"
            a:layout_marginRight="50px"
            a:layout_marginTop="70px"
            a:textColor="@color/DarkSeaGreen"
            a:textSize="@dimen/font_size_42" />

        <x.TextView
            a:id="@+id/mTxtLocation"
            style="@style/TextView.MultiLine"
            a:layout_alignParentRight="true"
            a:layout_below="@id/mTxtTime"
            a:layout_marginRight="50px"
            a:layout_marginTop="50px"
            a:maxWidth="300px"
            a:textColor="@color/DodgerBlue"
            a:textSize="@dimen/font_size_42" />

        <x.LinearLayout
            a:id="@+id/mLayoutTags"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_below="@id/mTxtTitle"
            a:layout_marginTop="30px" />


        <com.halo.component.FlowLayout
            a:id="@+id/mLayoutPositions"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_below="@id/mLayoutTags"
            a:layout_marginLeft="50px"
            a:layout_marginRight="50px"
            a:layout_marginTop="30px"
            a:layout_toLeftOf="@id/mTxtTime" />
    </x.RelativeLayout>

    <View
        a:id="@+id/mBottomLine"
        a:layout_width="match_parent"
        a:layout_height="20px"
        a:layout_below="@id/mLayoutHeader"
        a:layout_marginTop="80px"
        a:background="@color/gray_fa" />
</x.RelativeLayout>