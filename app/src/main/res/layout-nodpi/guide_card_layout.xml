<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/guide_img"
        android:layout_width="@dimen/guide_image_size"
        android:layout_height="@dimen/guide_image_size"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_shape"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/circle_shape"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/guide_txt_title"
        style="@style/TextView.Deep_s_gray.XXLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_img"
        android:layout_marginTop="@dimen/guide_image_margin_top"
        android:gravity="center" />

    <TextView
        android:id="@+id/guide_txt_subtitle"
        style="@style/TextView.Light_Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_txt_title"
        android:layout_marginTop="@dimen/guide_text_margin_top"
        android:gravity="center" />

</RelativeLayout>