<?xml version="1.0" encoding="utf-8"?>
<x.RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content">

    <x.RelativeLayout
        a:id="@+id/mLayoutTitle"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:background="@color/gray_ee"
        a:paddingTop="8px">

        <x.TextView
            a:id="@+id/mTxtPartTime"
            style="@style/TextView.Center"
            a:layout_width="340px"
            a:layout_height="124px"
            a:layout_centerHorizontal="true"
            a:text="@string/job_part_time"
            a:textColor="@color/black"
            a:textSize="@dimen/font_size_44" />

        <x.TextView
            a:id="@+id/mTxtFullTime"
            style="@style/TextView.Center"
            a:layout_width="340px"
            a:layout_height="124px"
            a:layout_marginRight="10px"
            a:layout_toLeftOf="@id/mTxtPartTime"
            a:text="@string/job_full_time"
            a:textColor="@color/black"
            a:textSize="@dimen/font_size_44" />

        <x.TextView
            a:id="@+id/mTxtJobFair"
            style="@style/TextView.Center"
            a:layout_width="340px"
            a:layout_height="124px"
            a:layout_marginLeft="10px"
            a:layout_toRightOf="@id/mTxtPartTime"
            a:text="@string/job_fair"
            a:textColor="@color/black"
            a:textSize="@dimen/font_size_44" />

    </x.RelativeLayout>

    <FrameLayout
        a:id="@+id/mJobListFragment"
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:layout_below="@id/mLayoutTitle" />
</x.RelativeLayout>