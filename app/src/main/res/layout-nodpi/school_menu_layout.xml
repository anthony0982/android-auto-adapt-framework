                    a:layout_marginLeft="26px"
                    a:layout_toRightOf="@id/img_school_menu_service"
                    a:text="@string/school_menu_service" />
            </x.RelativeLayout>

            <x.RelativeLayout
                a:id="@+id/school_menu_layout_school"
                a:layout_width="match_parent"
                a:layout_height="140px" >

                <x.ImageView
                    a:id="@+id/img_school_menu_school"
                    style="@style/ImageView"
                    a:layout_width="60px"
