<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent" >

    <View
        a:id="@+id/school_menu_list_bg"
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:background="@color/translucent_60_dark" />

    <ScrollView
        a:id="@+id/school_menu_scroll_view"
        a:layout_width="wrap_content"
        a:layout_height="match_parent"
        a:background="@color/blue"
        a:fillViewport="true"
        a:overScrollMode="never"
        a:paddingBottom="0px"
        a:paddingRight="0px"
        a:paddingTop="0px"
        a:scrollbars="none" >

        <LinearLayout
            a:id="@+id/school_menu_layout"
            a:layout_width="600px"
            a:layout_height="match_parent"
            a:background="@color/white"
            a:orientation="vertical"
            a:paddingBottom="150px" >

            <x.RelativeLayout
                a:id="@+id/school_menu_layout_course"
                a:layout_width="match_parent"
                a:layout_height="140px"
                a:visibility="gone" >

                <x.ImageView
                    a:id="@+id/img_school_menu_course"
                    style="@style/ImageView"
                    a:layout_width="60px"
                    a:layout_height="60px"
                    a:layout_centerVertical="true"
                    a:layout_marginLeft="54px"
                    x:src="@drawable/school_menu_ic_class" />

                <x.TextView
                    a:id="@+id/txt_school_menu_course"
                    style="@style/MenuText.MediumX"
                    a:layout_centerVertical="true"
                    a:layout_marginLeft="26px"
                    a:layout_toRightOf="@id/img_school_menu_course"
                    a:text="@string/school_menu_course" />
            </x.RelativeLayout>

            <x.RelativeLayout
                a:id="@+id/school_menu_layout_target_interest"
                a:layout_width="match_parent"
                a:layout_height="140px"
                a:visibility="gone" >

                <x.ImageView
                    a:id="@+id/img_school_menu_target_interest"
                    style="@style/ImageView"
                    a:layout_width="60px"
                    a:layout_height="60px"
                    a:layout_centerVertical="true"
                    a:layout_marginLeft="54px"
                    x:src="@drawable/school_menu_ic_target" />

                <x.TextView
                    a:id="@+id/txt_school_menu_target_interest"
                    style="@style/MenuText.MediumX"
                    a:layout_centerVertical="true"
                    a:layout_marginLeft="26px"
                    a:layout_toRightOf="@id/img_school_menu_target_interest"
                    a:text="@string/school_menu_target_interest" />
            </x.RelativeLayout>

            <x.RelativeLayout
