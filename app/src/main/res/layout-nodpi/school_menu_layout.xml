                <x.TextView
                    a:id="@+id/txt_school_menu_school"
                    style="@style/MenuText.MediumX"
                    a:layout_centerVertical="true"
                    a:layout_marginLeft="26px"
                    a:layout_toRightOf="@id/img_school_menu_school"
                    a:text="@string/school_menu_school_follow" />

                <x.ImageView
                    a:id="@+id/img_school_menu_school_triangle_down"
                    style="@style/ImageView"
                    a:layout_width="36px"
                    a:layout_height="36px"
                    a:layout_alignParentRight="true"
                    a:layout_centerVertical="true"
                    a:layout_marginRight="50px"
                    x:src="@drawable/ic_menu_triangle_down" />
            </x.RelativeLayout>

            <GridLayout
                a:id="@+id/school_menu_grid"
                a:layout_width="match_parent"
                a:layout_height="match_parent"
                a:layout_below="@id/school_menu_layout_school"
                a:alignmentMode="alignBounds"
                a:background="@color/white"
                a:columnCount="1"
                a:columnOrderPreserved="false"
                a:orientation="vertical"
                a:rowCount="3"
                a:useDefaultMargins="false" />
