<?xml version="1.0" encoding="utf-8"?>
<x.RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content"
    a:background="@drawable/list_item_color_selector">

    <x.TextView
        a:id="@+id/mTxtKeyword"
        style="@style/TextView"
        a:layout_height="140px"
        a:layout_centerVertical="true"
        a:gravity="center_vertical"
        a:textColor="@color/gray_66"
        a:textSize="@dimen/font_size_44" />

    <View
        a:id="@+id/mImgLine"
        a:layout_width="match_parent"
        a:layout_height="2px"
        a:layout_alignLeft="@id/mTxtKeyword"
        a:layout_below="@id/mTxtKeyword"
        a:background="@color/gray_f3" />

</x.RelativeLayout>