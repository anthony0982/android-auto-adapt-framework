<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="TextView.LineSpacingMultiplier">
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/school_search_edittext_hint_color</item>
        <item name="android:textColor">@color/addpaper_input</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textCursorDrawable">@drawable/material_input_cursor_color</item>
    </style>

    <style name="ImageView.ScheduleRecord">
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">48px</item>
    </style>

    <style name="ImageView.ScheduleHomework">
        <item name="android:layout_width">22px</item>
        <item name="android:layout_height">22px</item>
    </style>

    <style name="TextView.ScheduleRecord">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48px</item>
        <item name="android:textColor">#ff737373</item>
    </style>

    <style name="TextView.ScheduleAutoRecordLable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45px</item>
        <item name="android:textColor">#ff696767</item>
    </style>

    <style name="TextView.ScheduleAutoRecordContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45px</item>
        <item name="android:textColor">#ff292525</item>
    </style>

    <style name="TextView.ScheduleRecordList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">46px</item>
        <item name="android:textColor">#ff999ba1</item>
    </style>

    <style name="TextView.ScheduleHomework">
        <item name="android:layout_width">876px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingExtra">15px</item>
        <item name="android:textSize">38px</item>
        <item name="android:textColor">#ff8c8c8c</item>
    </style>

    <style name="TextView.ScheduleHomeworkRequest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#ff9c9fa1</item>
    </style>

    <style name="TextView.ScheduleHomeworkItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#ff8c8c8c</item>
    </style>

    <style name="TextView.TrainingCourse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45px</item>
        <item name="android:textColor">#595b5d</item>
        <item name="android:layout_marginTop">40px</item>
    </style>

    <style name="TextView.ChatMenu">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60px</item>
        <item name="android:background">@drawable/material_list_item_bg_color_selector</item>
        <item name="android:paddingLeft">60px</item>
        <item name="android:paddingRight">60px</item>
        <item name="android:minWidth">500px</item>
        <item name="android:textColor">#FF263238</item>
        <item name="android:textSize">44px</item>
    </style>

    <style name="TextView.ChatMenu.EmoticonButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">130px</item>
        <item name="android:textColor">#FF009DFF</item>
        <item name="android:paddingLeft">0px</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">50px</item>
    </style>

    <style name="TextView.EditTrainingCourse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">38px</item>
        <item name="android:layout_marginTop">85px</item>
        <item name="android:textSize">45px</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditText.EditTrainingCourse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginLeft">42px</item>
        <item name="android:layout_marginRight">100px</item>
        <item name="android:layout_marginTop">75px</item>
    </style>
</resources>