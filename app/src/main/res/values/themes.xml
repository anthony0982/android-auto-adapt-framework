<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="alertDialogStyle">@style/AlertDialog.AppCompat</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FullScreen" />

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowSoftInputMode">adjustNothing|stateHidden</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray_9a</item>
        <item name="colorControlNormal">@color/gray_9a</item>
        <item name="android:colorForeground">@color/gray_9a</item>
    </style>

    <style name="AppTheme.Light.NoAnimation">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Light.FullScreen" />

    <style name="AppTheme.Light.TransparentStatus">
    </style>


    <style name="AppTheme.Blue">
        <item name="android:windowSoftInputMode">adjustNothing|stateHidden</item>
        <item name="android:colorForeground">@color/gray_9a</item>
        <item name="colorPrimaryDark">@color/blue</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/translunt_gray_44</item>
    </style>


    <style name="AppTheme.Light.SlideUp">
        <item name="android:windowAnimationStyle">@style/activityAnimationSlideUp</item>
    </style>

    <style name="AppTheme.Editor">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/translunt_gray_44</item>
    </style>

    <style name="ImageSelectorToolBar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:actionButtonStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBar" />

    <style name="ToolBar.ImageView" parent="ImageView">
        <item name="android:clickable">true</item>
    </style>

    <style name="ToolBar.TextView" parent="TextView">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>